<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#161739"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/background"
            android:drawableRight="@drawable/baseline_watch_24"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Stop Watch"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_marginBottom="40dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/stopwatchwall"
            android:src="@drawable/bg"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="80dp"
            app:cardElevation="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:elevation="40dp"

            >
            <LinearLayout
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:background="#262644"
                android:layout_height="wrap_content">

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            >
            <Button
                android:id="@+id/resetBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Reset"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:backgroundTint="#262644"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:drawableRight="@drawable/ic_refresh_24"
                />

            <Button
                android:id="@+id/startBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Start"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#7878ce"
                android:drawableRight="@drawable/ic_start"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                />
    </LinearLayout>


</LinearLayout>
</LinearLayout>


